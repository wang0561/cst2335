<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather_forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wang.lab1.WeatherForecast">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weatherImageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="38dp"
        android:id="@+id/currentTemp"
        android:textColor="#0000FF"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTemp"
        android:layout_below="@+id/currentTemp"
        android:layout_alignStart="@+id/currentTemp"
        android:layout_marginTop="21dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
         />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemp"
        android:layout_below="@+id/minTemp"
        android:layout_alignStart="@+id/minTemp"
        android:layout_marginTop="26dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:id="@+id/weatherImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weatherProgressBar"
        android:visibility="invisible"
        android:layout_below="@+id/maxTemp"
        android:layout_alignEnd="@+id/weatherImageView"
        android:layout_marginTop="34dp" />
</RelativeLayout>
